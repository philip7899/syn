

<div class="container">
	<div class="span12">
					<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				  <%= f.error_notification %>
		<h2 class="black-font-1 text-center">Sign up</h2>
		<div class="my-wrapper">


			<div class="stolen-surfbox text-center">


				  <div class="form-inputs">
				    <%= f.input :email, :required => true, :autofocus => true %>
				    <%= f.input :password, :required => true %>
				    <%= f.input :password_confirmation, :required => true %>
				    <%#= f.input :role, :as => :radio_buttons, :collection => [['Brown Student', 'brown'] ,['RISD Student', 'risd']] %>
				  </div>

				 
				    <%= f.button :submit, "Sign up", :class => "btn btn-primary btn-large" %>
				 
				<% end %>


			</div>
		</div>
	</div>
</div>